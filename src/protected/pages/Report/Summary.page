<com:TContent ID="Main">
<h1>Resumen de realizaci&oacute;n del proyecto <%= h($this->Session['project']) %></h1>

<fieldset class="resource-report">
	<legend>Resumen de actividades</legend>
	<com:TMultiView ID="views">
	<com:TView>
		<br/>Este proyecto todav&iacute;a no ha comenzado a desarrollarse.
	</com:TView>
		<com:TView>
		<br/>Este proyecto todav&iacute;a est&aacute; en desarrollo.
	</com:TView>
	<com:TView>
	<com:TRepeater ID="activityList">
	 	<div class="list">
	 	<prop:HeaderTemplate>
		  <table>
		  	<tr>
		  		<th>Nombre</th>
		  		<th>Descripci&oacute;n</th>
		  		<th>Estimado</th>
		  		<th>Realizado</th>
		  		<th>Retraso</th>
		  	</tr>
		</prop:HeaderTemplate>
		<prop:FooterTemplate>
		  </table>
		</prop:FooterTemplate>
		<prop:ItemTemplate>
		  <tr>
		  	<td><%# h($this->DataItem->Name) %></td>
		  	<td><%# h($this->DataItem->Description) %></td>
		  	<td><com:System.I18N.TDateFormat Pattern="dd/MM/yyyy"
				Value=<%# $this->DataItem->EstimateDate %> /> -
		  		<%# h($this->DataItem->EstimateDuration) %></td>
		  	<td><com:System.I18N.TDateFormat Pattern="dd/MM/yyyy"
				Value=<%# $this->DataItem->RealDate %> /> -
		  		<%# h($this->DataItem->RealDuration) %></td>
		  	<td><%# h($this->DataItem->RealDuration - 
		  			$this->DataItem->EstimateDuration) %></td>
		  </tr>
		</prop:ItemTemplate>
	</com:TRepeater>
	</com:TView>
	<com:TView>
		<br/>Este proyecto todav&iacute;a no ha comenzado a desarrollarse.
	</com:TView>
		<com:TView>
		<br/>Este proyecto todav&iacute;a est&aacute; en desarrollo.
	</com:TView>
	</fieldset>
</com:TContent>